<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Sites - CMS Platform</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://cdn.jsdelivr.net/npm/axios@1.6.0/dist/axios.min.js"></script>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <i class="bi bi-pencil-square"></i> CMS Platform
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">
              <i class="bi bi-house"></i> Dashboard
            </a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
              <i class="bi bi-person-circle"></i> <span id="userName">User</span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
              <li><a class="dropdown-item" href="#" onclick="logout()">Logout</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container-fluid py-4">
    <div class="row mb-4">
      <div class="col">
        <h1><i class="bi bi-globe"></i> My Sites</h1>
      </div>
      <div class="col-auto">
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#newSiteModal">
          <i class="bi bi-plus-circle"></i> New Site
        </button>
      </div>
    </div>

    <!-- Sites Grid -->
    <div id="sitesContainer" class="row">
      <p class="text-muted">Loading...</p>
    </div>
  </div>

  <!-- New Site Modal -->
  <div class="modal fade" id="newSiteModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><i class="bi bi-plus-circle"></i> Create New Site</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="newSiteForm">
            <div class="mb-3">
              <label for="siteName" class="form-label">Site Name (URL)</label>
              <input type="text" class="form-control" id="siteName" required>
              <small class="text-muted">Use lowercase, no spaces</small>
            </div>
            <div class="mb-3">
              <label for="siteTitle" class="form-label">Site Title</label>
              <input type="text" class="form-control" id="siteTitle" required>
            </div>
            <div class="mb-3">
              <label for="siteDescription" class="form-label">Description</label>
              <textarea class="form-control" id="siteDescription" rows="3"></textarea>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" onclick="createSite()">Create Site</button>
        </div>
      </div>
    </div>
  </div>

  <footer class="bg-light py-4 mt-5 border-top">
    <div class="container text-center">
      <p class="text-muted mb-0">&copy; 2024 CMS Platform. All rights reserved.</p>
    </div>
  </footer>

  <script>
    async function loadSites() {
      try {
        const response = await axios.get('/api/sites');
        const sites = response.data;

        if (sites.length === 0) {
          document.getElementById('sitesContainer').innerHTML = `
            <div class="col-12">
              <div class="alert alert-info text-center py-5">
                <i class="bi bi-info-circle" style="font-size: 2rem;"></i>
                <p class="mt-3">No sites yet. <a href="#" data-bs-toggle="modal" data-bs-target="#newSiteModal">Create your first site</a></p>
              </div>
            </div>
          `;
          return;
        }

        document.getElementById('sitesContainer').innerHTML = sites.map(site => `
          <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
              <div class="card-body">
                <h5 class="card-title">${site.title}</h5>
                <p class="card-text text-muted">${site.description || 'No description'}</p>
                <div class="mb-3">
                  <span class="badge bg-${site.status === 'published' ? 'success' : 'warning'}">
                    ${site.status === 'published' ? '<i class="bi bi-check-circle"></i> Published' : '<i class="bi bi-pencil"></i> Draft'}
                  </span>
                  <span class="badge bg-info">${(site.pages || []).length} pages</span>
                </div>
              </div>
              <div class="card-footer bg-white">
                <a href="/builder/${site.id}" class="btn btn-sm btn-primary w-100 mb-2">
                  <i class="bi bi-pencil-square"></i> Edit
                </a>
                <div class="btn-group w-100" role="group">
                  <button type="button" class="btn btn-sm btn-outline-secondary" onclick="settingsSite('${site.id}')">
                    <i class="bi bi-gear"></i>
                  </button>
                  <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteSite('${site.id}')">
                    <i class="bi bi-trash"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>
        `).join('');
      } catch (error) {
        console.error('Failed to load sites', error);
        document.getElementById('sitesContainer').innerHTML = `
          <div class="col-12">
            <div class="alert alert-danger">Failed to load sites. Please try again.</div>
          </div>
        `;
      }
    }

    async function createSite() {
      const name = document.getElementById('siteName').value;
      const title = document.getElementById('siteTitle').value;
      const description = document.getElementById('siteDescription').value;

      if (!name || !title) {
        alert('Please fill in all required fields');
        return;
      }

      try {
        const response = await axios.post('/api/sites', { name, title, description });
        if (response.data.success) {
          bootstrap.Modal.getInstance(document.getElementById('newSiteModal')).hide();
          document.getElementById('newSiteForm').reset();
          loadSites();
          alert('Site created successfully!');
        }
      } catch (error) {
        alert(error.response?.data?.error || 'Failed to create site');
      }
    }

    async function deleteSite(siteId) {
      if (!confirm('Are you sure you want to delete this site?')) return;

      try {
        const response = await axios.delete(`/api/sites/${siteId}`);
        if (response.data.success) {
          loadSites();
          alert('Site deleted successfully');
        }
      } catch (error) {
        alert(error.response?.data?.error || 'Failed to delete site');
      }
    }

    function settingsSite(siteId) {
      alert('Site settings coming soon!');
    }

    async function loadUserInfo() {
      try {
        const response = await axios.get('/auth/user');
        document.getElementById('userName').textContent = response.data.username;
      } catch (error) {
        console.error('Failed to load user info', error);
      }
    }

    async function logout() {
      try {
        await axios.post('/auth/logout');
        window.location.href = '/auth/login';
      } catch (error) {
        alert('Logout failed');
      }
    }

    window.addEventListener('DOMContentLoaded', () => {
      loadSites();
      loadUserInfo();
    });
  </script>
</body>
</html>
