<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - CMS Platform</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://cdn.jsdelivr.net/npm/axios@1.6.0/dist/axios.min.js"></script>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <i class="bi bi-pencil-square"></i> CMS Platform
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/sites">
              <i class="bi bi-globe"></i> My Sites
            </a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
              <i class="bi bi-person-circle"></i> <span id="userName">User</span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
              <li><a class="dropdown-item" href="#" onclick="logout()">Logout</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container-fluid py-4">
    <div class="row mb-4">
      <div class="col">
        <h1><i class="bi bi-speedometer2"></i> Dashboard</h1>
      </div>
      <div class="col-auto">
        <a href="/sites" class="btn btn-primary">
          <i class="bi bi-plus-circle"></i> My Sites
        </a>
      </div>
    </div>

    <!-- Stats Row -->
    <div class="row mb-4">
      <div class="col-md-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <p class="text-muted mb-1">Total Sites</p>
                <h3 id="totalSites" class="mb-0">0</h3>
              </div>
              <i class="bi bi-globe text-primary" style="font-size: 2rem;"></i>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <p class="text-muted mb-1">Published</p>
                <h3 id="publishedSites" class="mb-0">0</h3>
              </div>
              <i class="bi bi-check-circle text-success" style="font-size: 2rem;"></i>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <p class="text-muted mb-1">Drafts</p>
                <h3 id="draftSites" class="mb-0">0</h3>
              </div>
              <i class="bi bi-pencil text-warning" style="font-size: 2rem;"></i>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <p class="text-muted mb-1">Total Pages</p>
                <h3 id="totalPages" class="mb-0">0</h3>
              </div>
              <i class="bi bi-file-text text-info" style="font-size: 2rem;"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Sites -->
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">
          <i class="bi bi-clock-history"></i> Recent Sites
        </h5>
      </div>
      <div class="card-body">
        <div id="recentSites" class="list-group">
          <p class="text-muted">Loading...</p>
        </div>
      </div>
    </div>
  </div>

  <footer class="bg-light py-4 mt-5 border-top">
    <div class="container text-center">
      <p class="text-muted mb-0">&copy; 2024 CMS Platform. All rights reserved.</p>
    </div>
  </footer>

  <script>
    async function loadDashboardData() {
      try {
        const response = await axios.get('/api/sites');
        const sites = response.data;

        document.getElementById('totalSites').textContent = sites.length;
        document.getElementById('publishedSites').textContent = sites.filter(s => s.status === 'published').length;
        document.getElementById('draftSites').textContent = sites.filter(s => s.status === 'unpublished').length;

        let totalPages = 0;
        sites.forEach(s => {
          totalPages += (s.pages || []).length;
        });
        document.getElementById('totalPages').textContent = totalPages;

        // Display recent sites
        const recentSites = sites.slice(0, 5);
        if (recentSites.length === 0) {
          document.getElementById('recentSites').innerHTML = `
            <p class="text-muted text-center py-3">No sites yet. <a href="/sites">Create your first site</a></p>
          `;
        } else {
          document.getElementById('recentSites').innerHTML = recentSites.map(site => `
            <a href="/builder/${site.id}" class="list-group-item list-group-item-action">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="mb-1">${site.title}</h6>
                  <small class="text-muted">${site.status === 'published' ? '<i class="bi bi-check-circle"></i> Published' : '<i class="bi bi-pencil"></i> Draft'}</small>
                </div>
                <span class="badge bg-${site.status === 'published' ? 'success' : 'warning'}">${site.status}</span>
              </div>
            </a>
          `).join('');
        }
      } catch (error) {
        console.error('Failed to load dashboard data', error);
      }
    }

    async function loadUserInfo() {
      try {
        const response = await axios.get('/auth/user');
        document.getElementById('userName').textContent = response.data.username;
      } catch (error) {
        console.error('Failed to load user info', error);
      }
    }

    async function logout() {
      try {
        await axios.post('/auth/logout');
        window.location.href = '/auth/login';
      } catch (error) {
        alert('Logout failed');
      }
    }

    // Load data on page load
    window.addEventListener('DOMContentLoaded', () => {
      loadDashboardData();
      loadUserInfo();
    });
  </script>
</body>
</html>
